@page "/register"
@inherits RegisterBase
@layout LoginLayout

<div class="limiter">
    <div class="container-login100" style="background-image: url('images/bg-01.jpg');">
        <div class="wrap-login100 p-l-110 p-r-110 p-t-62 p-b-33">

            <EditForm Model="RegisterModel" OnValidSubmit="HandleRegister">
                <DataAnnotationsValidator />
                <Microsoft.AspNetCore.Components.Forms.ValidationSummary />

                <!-- Title with reduced spacing -->
                <span class="login100-form-title" style="padding-bottom: 30px; font-size: 2.2rem;">
                    Create a New Account
                </span>

                <div class="p-t-31 p-b-9">
                    <span class="txt1">Full Name</span>
                </div>
                <div class="wrap-input100 validate-input">
                    <InputText class="input100" @bind-Value="RegisterModel.FullName" />
                    <span class="focus-input100"></span>
                </div>

                <div class="p-t-31 p-b-9">
                    <span class="txt1">Email</span>
                </div>
                <div class="wrap-input100 validate-input">
                    <InputText class="input100" @bind-Value="RegisterModel.Email" />
                    <span class="focus-input100"></span>
                </div>

                <div class="p-t-31 p-b-9">
                    <span class="txt1">Password</span>
                </div>
                <div class="wrap-input100 validate-input">
                    <InputText class="input100" type="password" @bind-Value="RegisterModel.Password" />
                    <span class="focus-input100"></span>
                </div>

                <div class="p-t-31 p-b-9">
                    <span class="txt1">Confirm Password</span>
                </div>
                <div class="wrap-input100 validate-input">
                    <InputText class="input100" type="password" @bind-Value="RegisterModel.ConfirmPassword" />
                    <span class="focus-input100"></span>
                </div>

                <div class="container-login100-form-btn m-t-17">
                    <button type="submit" class="login100-form-btn">
                        Register
                    </button>
                </div>

                <div class="w-full text-center p-t-55">
                    <span class="txt2">Already have an account?</span>
                    <a @onclick="NavigateToLogin" class="txt2 bo1">
                        Sign in now
                    </a>
                </div>

                @if (!string.IsNullOrEmpty(Message))
                {
                    <div class="alert-validate mt-3">@Message</div>
                }
            </EditForm>

        </div>
    </div>
</div>
